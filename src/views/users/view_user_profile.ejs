<% include ../partials/headUser %>
  <% include ../partials/navbarUser %>
    <section>
      <h1 align="center"><i class="fa fa-user"></i> Perfil</h1>
      <br><br>
      <% if(usuario.image) { %>
        <a href="<%= perfil.image %>"><img id="imagen_perfil" src="<%= perfil.image %>" alt=""></a>

        <% } else { %>
          <img id="imagen_default_perfil" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png"
            alt="">
          <% } %>

            <div id="div_perfil">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Nombre:</th>
                    <td scope="col">
                      <%= perfil.username %>
                    </td>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">Apellidos:</th>
                    <td>
                      <%= perfil.lastname %>
                    </td>
                  </tr>
                  <tr>
                    <th scope="row">Fecha de cumpleaños:</th>
                    <td>
                      <%= perfil.birthdate.toLocaleDateString() %>
                    </td>
                  </tr>
                  <tr>
                    <th scope="row">Correo electrónico:</th>
                    <td>
                      <%= perfil.email %>
                    </td>
                  </tr>
                  <tr>
                    <th scope="row">Se unió:</th>
                    <td>
                      <%= perfil.createdAt.toLocaleDateString() %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
    </section>

    <% include ../partials/footerUser %>
      <% include ../partials/scriptsUser %>