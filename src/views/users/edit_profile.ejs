<% include ../partials/headUser %>
  <% include ../partials/navbarUser %>

    <section>

      <div align="center">

        <div class="card border-warning mb-3" id="Card_editar_perfil">
          <div class="card-header"></div>
          <div class="card-body text-warning">

            <h1 id="h1_editar_perfil"><i class="fa fa-edit"></i>&nbsp;&nbsp;Editar perfil</h1>
            <hr>

            <!--Start Form-->
            <form action="/users/edit_profile/<%= usuario._id %>" method="POST" >

              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="inputEmail4">Nombre(s)</label>
                  <input type="text" class="form-control" id="username" name="username" value="<%= usuario.username %>"
                    placeholder="Name" required>
                </div>
                <div class="form-group col-md-6">
                  <label for="inputPassword4">Apellido(s)</label>
                  <input type="text" class="form-control" id="lastname" name="lastname" value="<%= usuario.lastname %>"
                    placeholder="Lastname" >
                </div>
              </div>

              <div class="form-group">
                <label for="exampleInputPassword1">Fecha de cumplea√±os</label>
                <input type="date" class="form-control" id="birthdate" name="birthdate" placeholder="Birthdate"
                  >
              </div>

              <br><br>
              <div align="center">
                <a href="javascript: history.go(-1)"><button type="button" class="btn btn-danger">Cancelar</button></a>
                <button type="submit" class="btn btn-warning">Actualizar</button>
              </div>
            </form>
            <!--End Form-->
            <!--Form para subir foto-->
            <form action="/users/edit_photo_profile/<%= usuario._id %>" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="inputPassword4">Subir foto de perfil</label>
                <div class="input-group mb-3">
                  <div class="custom-file">
                    <input type="file" class="custom-file-input form-control" id="image" name="image" >
                    <label class="custom-file-label" for="image">Seleccionar archivo</label>
                  </div>
                </div>
              </div>

              <br><br>
              <div align="center">
                <a href="javascript: history.go(-1)"><button type="button" class="btn btn-danger">Cancelar</button></a>
                <button type="submit" class="btn btn-warning">Actualizar</button>
              </div>

            </form>
            <!--End form-->
          </div>
        </div>
      </div>


    </section>

