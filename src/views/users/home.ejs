        <div>
          <br><br><br><br>
        </div>

        <h1 id="posts_publicados"><i class="material-icons" style="font-size: 40px;">auto_stories</i> Posts publicados</h1>
        <hr>

        <div class="card-columns">

          <% if(publicaciones.length> 0) { %>
            <% publicaciones.forEach(function(publicacion) { %>

              <div class="card">
                <div class="img-square-wrapper">

                  <a href="/users/publication?id=<%= publicacion._id %>"><img class="card-img-top"
                      src="<%= publicacion.image %>" width="400px" height="auto" alt="Card image cap"></a>
                  <div class="card-body">
                    <small style="float: right;"><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%=
                        publicacion.createdAt.toLocaleDateString() %></small>
                    <p><i class="fa fa-user"></i>&nbsp;&nbsp;<%= publicacion.username %>
                    </p>
                    <br>
                    <h5 class="card-title">
                      <%= publicacion.name %>
                    </h5>

                    <br>
                    <details>
                      <summary>Descripción</summary>
                      <div style="text-align: justify;">
                        <p class="card-text">
                          <%= publicacion.description %>
                        </p>
                      </div>
                    </details>

                  </div>

                  <div class="card-footer">
                    <a href=""></a>
                    <a href="/users/publication?id=<%= publicacion._id %>" class="btn btn-primary">Ver publicación</a>
                  </div>

                </div>
              </div>


              <% }); %>
                <% } %>

        </div>

    </section>

